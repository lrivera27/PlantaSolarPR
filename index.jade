		//Main Carousel
		#home-carousel.carousel.slide(data-ride='carousel')
			// Indicators
			ol.carousel-indicators
				li.active(data-target='#home-carousel', data-slide-to='0')
				li(data-target='#home-carousel', data-slide-to='1')
				li(data-target='#home-carousel', data-slide-to='2')
				li(data-target='#home-carousel', data-slide-to='3')
			// Wrapper for slides
			.carousel-inner(role='listbox')
				.item.active
					img(src='http://skitterphoto.com/wp-content/uploads/2014/05/Playa-Porto-Marie-free-license-CC0-1024x682.jpg', alt='Slide 1')
					.carousel-caption
						h3 Desconectate de la AEE
						p Te ayudamos a desconectarte de la AEE y no depender de cambios de tarifas
				.item
					img(src='https://placehold.it/1024x400', alt='Slide 2')
					.carousel-caption
						h3 Chania
						p The atmosphere in Chania has a touch of Florence and Venice.
				.item
					img(src='https://placehold.it/1024x400', alt='Slide 3')
					.carousel-caption
						h3 Flowers
						p Beatiful flowers in Kolymbari, Crete.
				.item
					img(src='https://placehold.it/1024x400', alt='Slide 4')
					.carousel-caption
						h3 Flowers
						p Beatiful flowers in Kolymbari, Crete.
			// Left and right controls
			a.left.carousel-control(href='#home-carousel', role='button', data-slide='prev')
				span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
				span.sr-only Previous
			a.right.carousel-control(href='#home-carousel', role='button', data-slide='next')
				span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
				span.sr-only Next

